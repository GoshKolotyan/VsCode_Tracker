{
  "name": "avocado-copilot-logger",
  "displayName": "Copilot Logger",
  "description": "Lightweight extension that tracks GitHub Copilot completions and chat sessions, aggregates metrics, and saves them locally as structured JSON. Data collection only - analysis and reporting must be set up separately.",
  "publisher": "GurgenKolotyan",
  "preview": true,
  "icon":"icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GoshKolotyan/VsCode_Tracker.git"
  },
  "galleryBanner": {
    "color": "#21214c",
    "theme": "dark"
  },
  "version": "1.7.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "GitHub Copilot",
    "Copilot analytics",
    "usage tracker",
    "developer insights",
    "productivity metrics",
    "local logging",
    "VS Code",
    "copilot logs",
    "team insights",
    "copilot metrics"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "avocado-copilot-logger.CollectLogs",
        "title": "Copilot Logger: Collect Logs"
      },
      {
        "command": "avocado-copilot-logger.Configure",
        "title": "Copilot Logger: Configure User Settings"
      }
    ],
    "configuration": {
      "title": "Copilot Logger",
      "properties": {
        "avocado-copilot-logger.logDirectory": {
          "type": "string",
          "default": "",
          "description": "Custom directory path for storing collected Copilot logs. If empty, uses default location in user's home directory."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.34.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
